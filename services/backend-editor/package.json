{
  "name": "carbyte-academy-be-editor",
  "version": "1.0.0",
  "description": "Backend for the collaborative editor of learning paths",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false -r tsconfig-paths/register ./src/server.ts",
    "build": "rm -rf dist && tsc && tsc-alias",
    "start": "node ./dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prepare": "husky || true"
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": "prettier --write"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/mongoose": "^5.11.96",
    "express": "^5.1.0",
    "jose": "^6.1.3",
    "lint-staged": "^16.1.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.16.2",
    "ws": "^8.18.3",
    "y-mongodb": "^0.1.11",
    "y-websocket": "^2.1.0",
    "yjs": "^13.6.29"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.6.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.10",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "mongodb-memory-server": "^10.0.0",
    "prettier": "^3.6.2",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "vitest": "^2.1.0"
  }
}
