# Rosetta Platform - Environment Configuration Template
# Copy this file to .env and replace placeholder values with your actual credentials

# OAuth2.0 Configuration - REPLACE WITH YOUR VALUES
CLIENT_ID=your-client-id-here
CLIENT_SECRET=your-client-secret-here
TENANT_ID=your-tenant-id-here

# Database and service URLs (defaults for Docker)
PG_DB_URL=postgresql://postgres:postgres@postgres:5432/rosetta
EDITOR_BASE_URL=http://be-editor:3001
AUTH_SERVICE_URL=http://auth-service:3002
ROSETTA_DOMAIN=localhost
ROSETTA_FE=http://frontend:3000
GRAPH_SYNC_INTERVAL_HOURS=24

# Redis Configuration (for backend-editor scalability)
REDIS_URL=redis://redis:6379
REDIS_PREFIX=yjs
REDIS_TOKEN_TTL=3600
REDIS_JWKS_TTL=86400

# Optional: Community group mappings - map Entra group IDs to community names
# Format: GROUP_ID_1:CommunityName1,GROUP_ID_2:CommunityName2
# COMMUNITY_GROUP_MAPPINGS=00000000-0000-0000-0000-000000000001:Engineering
